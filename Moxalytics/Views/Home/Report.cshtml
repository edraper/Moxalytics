@{
  ViewBag.Title = "Report Viewer";
}

<h2>Report Viewer</h2>

<div class="container">
  <button class="btn btn-info" id="downloadButton">Download PDF</button>
</div>

<div class="container" id="reportContainer">
  <table ng-controller="ReportController" class="table table-striped table-hover">
    <caption class="text-left" id="reportCaption">{{report.reportInformation}}</caption>
    @*<colgroup span="{{report.columns.length}}"></colgroup>*@
    <tr>
      <th class="text-center" ng-repeat="name in report.columns">{{name}}</th>
    </tr>
    <tbody>
      <tr ng-repeat="row in report.rows">
        <td ng-class="{'text-left': $first}" class="text-center" ng-repeat="name in report.columns">{{row[name]}}</td>
      </tr>
    </tbody>
  </table>
</div>

